#:kivy 1.0.9

<Browser>:    
  
    RelativeLayout: 
        orientation: 'horizontal'
        pos: 0, root.top - 40
        size: root.width, 40
        id: navigation_bar 
  
        Button:
            text: "Refresh"
            size_hint: 0.1, 0.66
            pos_hint: {'center_x': 0.1, 'center_y': 0.705} 
            
        TextInput: 
            id: input
            multiline: False
            hint_text:'Type url'
            pos_hint: {'center_x': 0.5, 'center_y': 0.705} 
            size_hint: 0.66, 0.66
            font_size: '10dp'
            on_text: app.process()

        Button:
            text: "Search"
            size_hint: 0.1, 0.66
            pos_hint: {'center_x': 0.9, 'center_y': 0.705}

    RelativeLayout: 
        orientation: 'vertical'
        pos: 0, root.top - 80
        size: root.width, root.height - 40
        id: painting_area

        canvas:
            Color:
                rgb: 0.1, 0.6, 0.3
            Rectangle:
                pos: 0, self.top - 80
                size: self.width, 40




            
            